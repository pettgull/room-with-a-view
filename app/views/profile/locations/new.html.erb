<div class="container">
  <div class="row justify-content-center">
    <h3>Add a new location</h3>
  </div>
  <%= simple_form_for @location do |f| %>
  <div class="col-auto"> <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :photo %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :description %>


    <div class="row justify-content-center">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
  <% end %>
  </div>
