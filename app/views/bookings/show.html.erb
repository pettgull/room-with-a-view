<div class="container">
  <h1> <%= @booking.location.name %> </h1>
  <h2> <%= @booking.location.address %></h2>
  <div class="d-flex">
    <p><%= @booking.location.user.first_name %> </p>
    <p> <%= @booking.location.user.last_name %></p>
  </div>
  <div class="d-flex">
    <p><%= @booking.start_date %> </p>
    <p> <%= @booking.end_date %> </p>
  </div>
</div>

<% if @booking.accepted%>
  <h3>booking confirmed</h3>
<% else %>
  <%= link_to 'confrim', booking_path(@booking), method: :patch, class: 'btn btn-success'  %>
<% end %>

<%= link_to 'back to bookings', bookings_path %>
